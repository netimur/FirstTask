<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstapi.view.CatPresentFragment">

    <ImageView
        android:id="@+id/cats_image_view"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/regular_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/xlarge_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/cats" />

    <EditText
        android:id="@+id/edit_text_first_fragment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cats_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_first_fragment"
        android:hint="@string/first_fragment_edit_text_hint"
        android:layout_marginHorizontal="@dimen/regular_margin"
        android:fontFamily="@font/jetbrainsmono_regular"
        android:layout_marginTop="@dimen/regular_margin"/>

    <Button
        android:id="@+id/button_first_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cats_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/regular_margin"
        android:layout_marginTop="@dimen/regular_margin"
        android:fontFamily="@font/jetbrainsmono_regular"
        android:text="@string/send_request"/>


</androidx.constraintlayout.widget.ConstraintLayout>