<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/fact_text_view"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jetbrainsmono_regular"
        android:layout_marginStart="@dimen/xlarge_margin"
        android:layout_marginTop="@dimen/regular_margin"
        android:text="@string/fact_hint_for_user"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/sample_text" />

    <Button
        android:id="@+id/button_get_fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:fontFamily="@font/jetbrainsmono_regular"
        android:text="@string/get_fact"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/regular_margin"
        app:layout_constraintBottom_toTopOf="@id/translate_button"
        />

    <Button
        android:id="@+id/translate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/regular_margin"
        android:text="@string/translate"
        android:fontFamily="@font/jetbrainsmono_regular"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/regular_margin"
        app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>